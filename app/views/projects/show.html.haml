- content_for(:page_title) { "Projects - #{@project.name}" }
.row
= form_for :project, :method => :get do |form|
  %fieldset
    %h3 Select dates
    = text_field_tag :start_date, params[:start_date], :placeholder => "Start YYYY/MM/DD"
    = text_field_tag :end_date, params[:end_date], :placeholder => "End YYYY/MM/DD"
    = form.submit "Refresh Charts", :class => "btn"

#story_type_chart
= render_chart @story_type_chart, "story_type_chart"
= render :partial => "shared/chart", :collection => @charts
